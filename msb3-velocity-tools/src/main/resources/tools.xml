  <toolbox scope="application">
    <tool key="config"    class="pl.matsuo.maven.skins.msb3.SkinConfigTool"/>
    <tool key="htmlTool"  class="pl.matsuo.maven.skins.msb3.HtmlTool"/>
    <tool key="uriTool"   class="pl.matsuo.maven.skins.msb3.URITool"/>
  </toolbox>
</tools>
